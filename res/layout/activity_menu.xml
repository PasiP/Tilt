<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="#000000" >
    <LinearLayout
      android:id="@+id/centrerView"
	  android:orientation="vertical"
	  android:layout_width="0dip" 
	  android:layout_height="fill_parent"
	  android:layout_weight="60"
	  android:paddingLeft="15dp"
	  android:paddingTop="15dp"
	  android:paddingRight="15dp"
	  android:paddingBottom="15dp"
	  android:background="#000000" >
	  	<Button 
	  	    android:id="@+id/b_options"
	    	android:layout_width="300dp" 
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_horizontal"
	    	android:background="#000000"
	    	style="?android:attr/borderlessButtonStyle" />
	  	<RelativeLayout
	  	    android:id="@+id/ll_header"
	  	    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:background="#FFFFFF" >
			<TextView 
			    android:id="@+id/headerView"
		    	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content"
		    	android:paddingLeft="10dp"
		    	android:textColor="#000000"
		    	android:textSize="18sp"
		    	android:text="@string/header" />
			<TextView 
			    android:id="@+id/counterView"
		    	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:paddingRight="10dp"
		    	android:background="#FFFFFF"
		    	android:textColor="#000000"
		    	android:textSize="18sp" />
		</RelativeLayout>
		<TextView 
		    android:id="@+id/characterView"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:gravity="center"
	    	android:background="#FFFFFF"
	    	android:textColor="#000000"
	    	android:textSize="140sp" />
		<TextView 
		    android:id="@+id/debug"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
	    	android:paddingLeft="10dp"
	    	android:background="#FFFFFF"
	    	android:textColor="#000000"
	    	android:text="@string/debug" />
		<TextView 
		    android:id="@+id/timer"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="10dp"
	    	android:background="#FFFFFF"
	    	android:textColor="#000000" />
		<TextView 
		    android:id="@+id/times_label"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="10dp"
	    	android:background="#FFFFFF"
	    	android:text="@string/times_label"
	    	android:textColor="#000000" />
		<TextView 
		    android:id="@+id/times"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="10dp"
	    	android:background="#FFFFFF"
	    	android:textColor="#000000" />
		<TextView 
		    android:id="@+id/selection_label"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="10dp"
	    	android:background="#FFFFFF"
	    	android:text="@string/selection_label"
	    	android:textColor="#000000" />
		<TextView 
		    android:id="@+id/selections"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="10dp"
	    	android:background="#FFFFFF"
	    	android:textColor="#000000" />
		<TextView 
		    android:id="@+id/show_label"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="10dp"
	    	android:background="#FFFFFF"
	    	android:text="@string/show_label"
	    	android:textColor="#000000" />
		<TextView 
		    android:id="@+id/shows"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="10dp"
	    	android:background="#FFFFFF"
	    	android:textColor="#000000" />
		<TextView 
		    android:id="@+id/sensor"
		    android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="3dp"
	    	android:paddingLeft="10dp"
	    	android:background="#FFFFFF"
	    	android:textColor="#000000"
	    	android:text="@string/sensor" />
		<LinearLayout 
		    android:id="@+id/buttons"
		    android:orientation="horizontal"
		    android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content" >
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

